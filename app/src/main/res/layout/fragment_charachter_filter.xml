<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="8dp"
    android:paddingTop="4dp"
    android:paddingEnd="8dp"
    android:id="@+id/frament_character_filter"
    tools:context=".ui.character.CharachterFilterFragment">

    <TextView
        android:id="@+id/choose_status_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose status"
        android:textSize="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/status_group"
        style="@style/Widget.MaterialComponents.Chip.Action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/choose_status_textView"
        app:singleSelection="true">

        <com.google.android.material.chip.Chip
            android:id="@+id/status_alive"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alive" />

        <com.google.android.material.chip.Chip
            android:id="@+id/status_dead"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dead" />

        <com.google.android.material.chip.Chip
            android:id="@+id/status_unknown"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unknown" />

    </com.google.android.material.chip.ChipGroup>

    <TextView
        android:id="@+id/choose_gender_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose gender"
        android:textSize="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/status_group"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="4dp" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/gender_group"
        style="@style/Widget.MaterialComponents.Chip.Action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/choose_gender_textView"
        app:singleSelection="true">

        <com.google.android.material.chip.Chip
            android:id="@+id/gender_male"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male" />

        <com.google.android.material.chip.Chip
            android:id="@+id/gender_female"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female" />

        <com.google.android.material.chip.Chip
            android:id="@+id/gender_genderless"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Genderless" />

        <com.google.android.material.chip.Chip
            android:id="@+id/gender_unknown"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unknown" />
    </com.google.android.material.chip.ChipGroup>

    <TextView
        android:id="@+id/choose_specie_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose specie"
        android:textSize="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gender_group"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="4dp" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/specie_group"
        style="@style/Widget.MaterialComponents.Chip.Action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/choose_specie_textView"
        app:singleSelection="true">

        <com.google.android.material.chip.Chip
            android:id="@+id/specie_human"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Human" />

        <com.google.android.material.chip.Chip
            android:id="@+id/specie_alien"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alien" />

        <com.google.android.material.chip.Chip
            android:id="@+id/specie_humanoid"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Humanoid" />


        <com.google.android.material.chip.Chip
            android:id="@+id/specie_poopybutthole"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Poopybutthole" />


        <com.google.android.material.chip.Chip
            android:id="@+id/specie_mythological"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mythological" />


        <com.google.android.material.chip.Chip
            android:id="@+id/specie_animal"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Animal" />


        <com.google.android.material.chip.Chip
            android:id="@+id/specie_robot"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Robot" />

        <com.google.android.material.chip.Chip
            android:id="@+id/specie_cronenberg"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cronenberg" />

        <com.google.android.material.chip.Chip
            android:id="@+id/specie_disease"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Disease" />

        <com.google.android.material.chip.Chip
            android:id="@+id/specie_planet"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Planet" />

        <com.google.android.material.chip.Chip
            android:id="@+id/specie_unknown"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unknown" />
    </com.google.android.material.chip.ChipGroup>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/use_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Use filters"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>